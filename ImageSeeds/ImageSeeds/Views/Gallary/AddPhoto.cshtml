@model ImageSeeds.Codes.Entities.Photo

@{
    ViewBag.Title = "AddPhoto";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}

<h2>AddPhoto</h2>
@using (Html.BeginForm("UploadPhoto", "Gallary", FormMethod.Post, new {@class = "form-horizontal", role = "form", enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    <div>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <input type="text" value="@Model.AlbumId" name="albumId" hidden/>
        <div>
            @Html.Label("File")
            <div>
                <input type="file" name="file" id="file" accept="image/*"/>
                @Html.ValidationMessage("File", "", new {@class = "text-danger"})
            </div>
        </div>
        <div>
            <div>
                <input type="submit" value="Upload"/>
            </div>
        </div>
        <div>
            @Html.ActionLink("Back to photo list", "PhotoList", new {albumId = Model.AlbumId})
        </div>
    </div>
}